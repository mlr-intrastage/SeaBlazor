@using System.Reflection

<Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="_additionalAssemblies">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

@code {
    private IEnumerable<Assembly> _additionalAssemblies = new[]
    {
        typeof(MysticIsland._Imports).Assembly,
        typeof(ThunderIsland._Imports).Assembly
    };
}
