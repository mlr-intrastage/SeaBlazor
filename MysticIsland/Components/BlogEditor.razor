@using SeaBlazor.Archipelago.WebServices

@inject UserSecurityService UserSecurityService

<form>
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" placeholder="Enter title" />
    </div>
    <div class="form-group">
        <label for="body">Body Content</label>
        <textarea class="form-control" id="body" rows="5" placeholder="Enter body content"></textarea>
    </div>
    <div class="form-group">
        <label for="author">Author Name</label>
        <input type="text" class="form-control" id="author" placeholder="Enter author name" />
    </div>
    <IntraStageButton Type="IntraStageButtonType.Submit" Class="btn btn-primary">Save</IntraStageButton>
</form>

@code {
    protected override async Task OnInitializedAsync()
    {
        await UserSecurityService.GetLogin();
    }
}